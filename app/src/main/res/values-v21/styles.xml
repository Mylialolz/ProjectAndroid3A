<resources>

    <style name="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorPrimaryInverse">@color/white</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="EditTextLaunchActivityStyleV21">
        <item name="colorPrimary">@color/launchColor</item>
        <item name="colorAccent">@color/launchColor</item>
        <item name="android:colorActivatedHighlight">@color/launchColor</item>
        <item name="android:colorControlActivated">@color/launchColor</item>
        <item name="android:colorControlNormal">@color/launchColor</item>
    </style>


</resources>
