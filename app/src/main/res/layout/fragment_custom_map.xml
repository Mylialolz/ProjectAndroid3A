<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.antoine.projectandroid3a.CustomMapFragment">

    <com.google.android.gms.maps.MapView
        android:id="@+id/f_CustomMapFragment_mapView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="1.0" />

    <ProgressBar
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/f_CustomMapFragment_progressBarMap"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/f_CustomMapFragment_mapView"
        app:layout_constraintLeft_toLeftOf="@+id/f_CustomMapFragment_mapView"
        app:layout_constraintRight_toRightOf="@+id/f_CustomMapFragment_mapView"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/f_CustomMapFragment_messageMapChargement"
        app:layout_constraintRight_toRightOf="@+id/f_CustomMapFragment_mapView"
        app:layout_constraintLeft_toLeftOf="@+id/f_CustomMapFragment_mapView"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="6dp"
        app:layout_constraintTop_toTopOf="@+id/f_CustomMapFragment_mapView"
        app:layout_constraintBottom_toTopOf="@+id/f_CustomMapFragment_progressBarMap"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="50dp" />

</android.support.constraint.ConstraintLayout>
